<html>
    <head>
        <title>Delete Stock</title>
        <link rel="stylesheet" href="/styles.css">
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:ital,wght@0,400..900;1,400..900&family=Roboto:ital,wght@0,100..900;1,100..900&family=VT323&display=swap" rel="stylesheet">
    </head>
    <body>
        <%- include('../partials/navbar.ejs', {links}) %>
        <div class="deleteConfirmation">
            <h1>Are you sure you want to delete <%= stock.title %> from the database?</h1>
            <div>
                <form method="POST" action="/delete/<%= stock.id %>">
                    <button type="submit">Yes</button>
                </form>
                <a href="/">
                    <button type="button">No</button>
                </a>
            </div>
        </div>
    </body>
</html>