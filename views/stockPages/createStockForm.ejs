<html>
    <head>
        <title>Add Stock</title>
        <link rel="stylesheet" href="/styles.css">
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:ital,wght@0,400..900;1,400..900&family=Roboto:ital,wght@0,100..900;1,100..900&family=VT323&display=swap" rel="stylesheet">
    </head>
    <body>
        <%- include('../partials/navbar.ejs', {links}) %>
        <div class="formHeader">
            <a href="/"><button type="button">Back</button></a>
        </div>
        <div class="stockForm">
            <h1>Create Stock Entry</h1>
            <%- include("../partials/errors.ejs") %>
            <form method="POST" action="/createStockForm" id="createStockForm">
                <label for="productTitle">Product Title</label>
                <input type="text" name="productTitle">
                <label for="productDesc">Product Description</label>
                <textarea name="productDesc" id="productDesc"></textarea>

                <label for="productCategory">Product Category</label>
                <select name="productCategory" id="productCategory">
                    <% categories.forEach((category) => { %> 
                        <%- include('../categoryPages/categoryOptionsNew', {category}); %>
                    <% }); %> 
                
                </select>

                <label for="productPrice">Product Price</label>
                <input type="number" name="productPrice">
                <label for="productQuantity">Product Quantity</label>
                <input type="number" name="productQuantity">
                <label for="productBrand">Product Brand</label>
                <input type="text" name="productBrand">
                <button type="submit">Add Stock</button>
            </form>
        </div>
    </body>
</html>